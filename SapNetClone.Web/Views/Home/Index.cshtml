@model IEnumerable<ListUserVM>
<div class="row">
    <div class="col-xxl-12">
        <div class="card card-xxl-stretch mb-5">
            <div class="card-header">
                <h3 class="card-title align-items-start flex-column">
                    users
                </h3>
                <a class="btn btn-primary" asp-action="create">yeni</a>
            </div>
            <div class="card-body py-3">
                <table class="table table-striped table-row-bordered gy-5 dt-init">
                    <thead>
                        <tr class="fw-bolder fs-6 text-gray-700">
                            <th>işlemler</th>
                            <th>
                               Name
                            </th>
                            <th>
                              Password
                            </th>
                           

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-action="edit" asp-route-id="@item" data-toggle="tooltip" title="düzenle">
                                        <i class="fa fa-pencil-alt"></i>
                                    </a>
                                    <a asp-action="delete" asp-route-id="@item" data-toggle="tooltip" title="sil">
                                        <i class="fa fa-trash-alt"></i>
                                    </a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelitem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelitem => item.Password)
                                </td>                           
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


